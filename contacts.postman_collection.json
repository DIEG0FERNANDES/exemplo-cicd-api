			"name": "Save a new contact",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test('it should save a valid contact', () => {\r",
							"    pm.response.to.have.status(201)\r",
							"    const response = pm.response.json()\r",
							"    const { contact } = response\r",
							"    pm.expect(contact._id).to.not.null\r",
							"})"
